<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AplicacionPatron.Views.MainPage"
             Title="Pagina de compra">
    
    <VerticalStackLayout Padding="20" Spacing="100">
        <Label Text="Bienvenido a la Pagina de compra de carros" HorizontalOptions="Center" FontSize="20" TextColor="DarkBlue"/>

        <Grid RowDefinitions="*" ColumnDefinitions="*,*">
            <Button Text="Agregar carro" Clicked="AddClicked" Grid.Row="0" Grid.Column="0"/>
            <Button Text="Comprar carro" Clicked="ComprarClicked" HorizontalOptions="FillAndExpand" Grid.Row="0" Grid.Column="1"/>
        </Grid>
            
    </VerticalStackLayout>
</ContentPage>
    